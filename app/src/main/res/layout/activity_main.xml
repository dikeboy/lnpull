<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lin.test.MainActivity">
<Button
        android:id="@+id/testListView"
        android:textAllCaps="false"
        android:layout_width="match_parent" android:layout_height="60dip"
        android:layout_marginTop="10dip" android:text="TestListView"/>

    <Button
            android:id="@+id/testScrollView"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/testListView"
            android:layout_width="match_parent" android:layout_height="60dip"
            android:layout_marginTop="10dip" android:text="testScrollView"/>
    <Button
            android:id="@+id/testRecycleViewLinearLayout"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/testScrollView"
            android:layout_width="match_parent" android:layout_height="60dip"
            android:layout_marginTop="10dip" android:text="testRecycleViewLinearLayout"/>
    <Button
            android:id="@+id/testRecycleViewGrid"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/testRecycleViewLinearLayout"
            android:layout_width="match_parent" android:layout_height="60dip"
            android:layout_marginTop="10dip" android:text="testRecycleViewGrid"/>
</android.support.constraint.ConstraintLayout>